<div class="genre-container">
    <a href='/'>
    <button class="btn">Return Home</button>
  </a>
{{#each movies}}
<div class="genre-card card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="/images/{{this.filename}}" class="img-fluid rounded-start" alt="{{this.title}}">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">{{this.plot}}</p>
        <p class="card-text">Directed By: {{this.director}}</p>
        <p class="card-text">Release Year: {{this.year}}</p>
        <p class="card-text">Length: {{this.length}}</p>
        <p class="card-text">Rated: {{this.mpaa_rating}}</p>
      </div>
    </div>
  </div>
</div>
{{/each}}
</div>

