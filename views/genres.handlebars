<div class='container'>
  <h1>{{genre_name}} Movies</h1>

  <!-- Grid of Movies -->
  <div class='d-flex flex-row space-between align-content-center flex-wrap'>
    {{#each movies}}
      <div>
        <a href='/movie/{{this.id}}'>
          <img
            src='/images/{{this.filename}}'
            alt='{{this.title}}'
            class='movie-poster'
          />
          <h3>{{this.title}}</h3>
        </a>
      </div>
    {{/each}}
  </div>
</div>