<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reel Bites</title>
  <link rel="stylesheet" href="/public/css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <!-- Scrolling Banner -->
  <div class="banner-container">
    <img src="popCorn&reel.png" alt="Banner 3" class="banner">
  </div>

  <!-- Header with Navigation Links -->
  <div class="header">
    <h1>Welcome to Reel Bites</h1>
    <div class="nav-links">
      <a href="login.handlebars" data-bs-toggle="modal" data-bs-target="#loginModal">Login</a>
    </div>
  </div>

  <!-- Top Picks Label -->
  <div class="top-picks-label">
    <h2>Top Picks Today</h2>
  </div>

  <!-- Movie Carousel -->
  <div class="movie-carousel">
    <div class="movie-carousel-track">
      <div class="movie-card">
        <img src="sweetNovember.png" alt="Movie 1">
        <div class="card-info">
          <h2>Romance</h2>
          <p>Description of Movie 1.</p>
        </div>
      </div>
      <div class="movie-card">
        <img src="cityOfAngels.png" alt="Movie 3">
        <div class="card-info">
          <h2>Romance</h2>
          <p>Description of Movie 3.</p>
        </div>
      </div>
      <div class="movie-card">
        <img src="theNotebook.png" alt="Movie 2">
        <div class="card-info">
          <h2>Romance</h2>
          <p>Description of Movie 2.</p>
        </div>
      </div>
      <div class="movie-card">
        <img src="pearlHarbor.png" alt="Movie 2">
        <div class="card-info">
          <h2>Romance</h2>
          <p>Description of Movie 2.</p>
        </div>
      </div>
      <div class="movie-card">
        <img src="youVeGotMail.png" alt="Movie 2">
        <div class="card-info">
          <h2>Romance</h2>
          <p>Description of Movie 2.</p>
        </div>
      </div>
      <!-- Add more movie cards as needed -->
    </div>
  </div>

  <!-- Login Modal -->
  <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="loginModalLabel">Login</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form>
            <div class="mb-3">
              <label for="username" class="form-label">Email</label>
              <input type="text" class="form-control" id="email-login" placeholder="Enter your email">
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password-login" placeholder="Enter your password">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/login.js"></script>
</body>
</html>
